{
  "name": "rtls-equipment-tracker",
  "version": "1.0.0",
  "description": "Electron application for tracking and optimizing equipment using RTLS data",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run webpack-dev\" \"npm run electron-dev\"",
    "webpack-dev": "webpack serve --mode development",
    "electron-dev": "wait-on http://localhost:5000 && cross-env NODE_ENV=development electron .",
    "electron-only": "electron .",
    "build": "webpack --mode production",
    "package": "npm run build && electron-builder",
    "test": "jest"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.10.6",
    "@mui/icons-material": "^5.11.16",
    "@mui/material": "^5.12.0",
    "csv-parse": "^5.3.6",
    "d3": "^7.8.4",
    "electron-store": "^8.1.0",
    "nedb-promises": "^6.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/plugin-transform-react-jsx": "^7.25.9",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "babel-loader": "^9.2.1",
    "concurrently": "^8.0.1",
    "copy-webpack-plugin": "^13.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.3",
    "electron": "^24.0.0",
    "electron-builder": "^23.6.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.5.0",
    "raw-loader": "^4.0.2",
    "style-loader": "^3.3.2",
    "wait-on": "^7.0.1",
    "webpack": "^5.79.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.13.2"
  },
  "build": {
    "appId": "com.rtls.equipmenttracker",
    "productName": "RTLS Equipment Tracker",
    "files": [
      "electron/**/*",
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
